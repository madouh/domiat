<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table border="2">
  <thead>
    <tr>
      <th style="width:200px">اﻹسم</th>
      <th style="width:300px">الغرض من الرسالة</th>
      <th style="width:200px">التليفون</th>
      <th style="width:500px">موضوع الرسالة</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.cause %></td>
        <td><%= post.tel %></td>
        <td><%= post.comment %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

