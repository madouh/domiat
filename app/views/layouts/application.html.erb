      </button>

      <a class="navbar-brand" href="/">www.new-domiat.com</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li><a href="<%= about_path %>">اتصل بنا</a></li>
        <li class="active"><a href="<%= find_detail_path %>">بحث متقدم</a></li>
        
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">اﻷنشطة <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">جامعات و مدارس</a></li>
            <li><a href="#">خدمات حكومية</a></li>
            <li><a href="#">الدليل</a></li>
            <li class="divider"></li>
            <li><a href="#">أنشطة شخصية</a></li>
            <li class="divider"></li>
            <li><a href="#">شركات و مصانع</a></li>
          </ul>
        </li>
        
      </ul>
      
 <%= form_tag find_search_path, :class => "navbar-form navbar-left", method:"get", remote: true, :id => "form_search" do %>
      <div class="form-group">
      <%= text_field_tag :search, '',size:30, :class => "form-control", :placeholder =>"اكتب كلمة البحث هنا" , :autocomplete => :off %>
      </div>

      <%= submit_tag 'بحث', :class => "btn brn-default" , :id => 'search_key', :style => 'visibility:hidden' %>

      <% end %>

      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>

        

        <li><strong> <%= link_to "إدراج نشاط", new_agent_path %></strong></li>
