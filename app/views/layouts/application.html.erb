                   <li style="display:none"><strong> <%= link_to "الانتظار", agents_waited_path %></strong></li>
          <% end %>
				<li><strong>مرحبا <%= current_user.username %></strong> -|-
				<strong><%= link_to "خروج", destroy_user_session_path , :method => 'delete' %></strong></li>

				<% else %>
0
